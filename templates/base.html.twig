        <h1>Le Petit Site des Quatre Mots</h1>
    {% endblock %}
</header>

<nav>
    {% block nav %}
        <ul>
            <li><a href={{ url("main_home") }}>Accueil</a></li>
            <li><a href="{{ path('app_mot1') }}" title="Mot 1">Mot 1</a></li>
            <li><a href={{ url("app_mot2") }}>Mot 2</a></li>
            <li><a href={{ url("word_word4") }}>Mot 4</a></li>
            <li><a href="{{ path('app_commentaires') }}" title="Commentaires">Commentaires</a></li>
        </ul>
    {% endblock %}
</nav>

{% block body %}{% endblock %}

<footer>
    {% block footer %}
