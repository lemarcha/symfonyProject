<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <link rel="icon" href={{ asset('assets/logo/logo.png') }}>
    <link rel="stylesheet" href="{{ asset('assets/styles/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/styles/mot3_style.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
<header>
    {% block header %}
        <img src="{{ asset('assets/logo/logo.png') }}" alt="logo">
        <h1>Le Petit Site des Quatre Mots</h1>
    {% endblock %}
</header>

<nav>
    {% block nav %}
        <ul>
            {% if app.user() %}
                <li><a href={{ path('user_profil', { 'id': app.user.id }) }}>{{ app.user.username}}</a></li>
            {% endif %}
            <li><a href={{ url("main_home") }}>Accueil</a></li>

            {% if app.user() %}
                <li><a href="{{ path('app_mot1') }}" title="Mot 1">Mot 1</a></li>
                <li><a href={{ url("app_mot2") }}>Mot 2</a></li>
                <li><a href={{ url("word_word4") }}>Mot 4</a></li>
                <li><a href={{ url("app_logout") }}>Déconnexion</a></li>
            {% else %}
                <li><a href={{ url("app_register") }}>Inscription</a></li>
                <li><a href={{ url("app_login") }}>Connexion</a></li>
            {% endif %}
        </ul>
    {% endblock %}
</nav>

{% block body %}{% endblock %}

<footer>
    {% block footer %}
        <p>©PSQM {{ "now" | date("Y") }}</p>
    {% endblock %}
</footer>
</body>
</html>
